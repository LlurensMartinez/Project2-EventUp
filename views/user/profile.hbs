<form class="profile-form" action="/" method="POST" enctype="multipart/form-data">

  <div>
    <div class="container-profile">
      <img src="{{currentUser.imageUrl}}" alt="picture" class="profile-img">
      <p>{{currentUser.username}}</p>
      <label for="imageUrl"></label>
      
      <input type="file" name="imageUrl" value="{{currentUser.imageUrl}}">
    </div>

    <label for="name">Name</label>
    <input type="text" name="name" value="{{currentUser.name}}">
    <label for="username">Username</label>
    <input type="text" name="username" value="{{currentUser.username}}">
    <label for="email">Email</label>
    <input type="text" name="email" value="{{currentUser.email}}">
    <label for="password">Password</label>
    <input type="password" name="password" value="">
  </div>

  <button type="submit">Edit</button>





</form>