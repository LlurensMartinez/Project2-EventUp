<form class="profile-form" action="/users/edit" method="POST" enctype="multipart/form-data">

  <div>
    <div class="container-profile">
      <img src="{{this.imageUrl}}" alt="picture" class="profile-img">
      <p class="p-profile">{{this.username}}</p>
    </div>  

    <label for="name">Name</label>
    <input type="text" name="name" value="{{this.name}}">
    <label for="username">Username</label>
    <input type="text" name="username" value="{{this.username}}">
    <label for="email">Email</label>
    <input type="text" name="email" value="{{this.email}}">
    <a href="/">Back</a>
    </div>
</form>