<section class="index-main login-section">
  <div class="container-login">
  <h2>Login</h2>
  <form action="/auth/login" method="POST" class="login-form">
    <input class="placeholder-white" type="text" name="username" placeholder="Username">
    <input class="placeholder-white" type="password" name="password" placeholder="Password">
    {{>flash}}
    <button class="submitButton" type="submit">Login</button>
  </form>
  </div>

</section>




